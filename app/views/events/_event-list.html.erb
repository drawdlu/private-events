<div class="events">
    <% events.each do |event| %>
        <div class="event-card">
            <% if event.private == true %>
                Private Event
            <% end %>
            <div class="event-location">
                <%= event.location %>
            </div>
            <div class="event-date"><%= event.date %></div>
            <%= link_to event_path(event) do %>
                <div class="event-link">See Details</div>
            <% end %>
        </div>
        <br>
    <% end %>
</div>
