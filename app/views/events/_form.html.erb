<%= form_with model: event do |form|%>
    <div class="field">
        <%= form.label :location %>
        <%= form.text_field :location %>
    </div>
    <% event.errors.full_messages_for(:location).each do |message |%>
        <div class="message">
            <%= message %>
        </div>
    <% end %>
    <div class="field">
        <%= form.label :date %>
        <%= form.date_field :date %>

    </div>
    <% event.errors.full_messages_for(:date).each do |message| %>
        <div class="message">
            <%= message%>
        </div>
    <% end %>
    <div class="field private">
        <%= form.label :private, "Private" %>
        <%= form.checkbox :private %>
    </div>
    <div class="form-create-button">
        <%= form.submit button%>
    </div>
<% end %>
