<h2>Events Page</h2>

<div class="events">
    <div class="event-card">
        <% @events.each do |event| %>
            <div class="event-location"><%= event.location %></div>
            <div class="event-date"><%= event.date %></div>
            <%= link_to event_path(event) do %>
                <div class="event-link">See Details</div>
            <% end %>
        <% end %>
    </div>
</div>
